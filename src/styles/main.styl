// Variables
$primary = #1a1a1a
$secondary = #2a2a2a
$accent = #00ff9d
$text = #ffffff
$font-primary = 'Inter', sans-serif
$font-logo = 'Space Grotesk', sans-serif

// Mixins
glow($color)
    box-shadow 0 0 10px rgba($color, 0.3),
               0 0 20px rgba($color, 0.2),
               0 0 30px rgba($color, 0.1)

// Global Styles
*
    margin 0
    padding 0
    box-sizing border-box

html, body
    background $primary
    color $text
    font-family $font-primary
    overflow-x hidden
    min-height 100vh

// Background container
#background-container
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    z-index 0
    canvas
        position absolute
        top 0
        left 0

// Header
.header
    position relative
    z-index 1
    width 100%
    padding 20px

// Nav styles
.nav
    width 100%
    padding 2rem 5%

.nav-container
    max-width 1200px
    margin 0 auto
    display flex
    justify-content space-between
    align-items center
    position relative

.social-links
    display flex
    gap 20px

.social-link
    color $text
    text-decoration none
    font-weight 600
    padding 8px 16px
    border-radius 15px
    background rgba($text, 0.1)
    transition all 0.3s ease
    
    &:hover
        background $accent
        color $primary
        transform translateY(-2px)
        glow($accent)

.logo
    display flex
    align-items center
    gap 5px
    cursor pointer
    transition transform 0.3s ease
    
    &:hover
        transform translateY(-2px)
    
    .logo-text
        font-family $font-logo
        font-size 2rem
        font-weight 700
        background linear-gradient(45deg, $text, $accent)
        -webkit-background-clip text
        -webkit-text-fill-color transparent
        letter-spacing 1px
    
    .sparkle
        font-size 1.5rem

// Hero Section
.hero
    position relative
    z-index 1
    min-height 100vh
    display flex
    justify-content center  // Center horizontally
    align-items center     // Center vertically
    padding 0 5%
    transition opacity 0.3s ease  // Add fade transition

    &-content
        text-align center   // Center text content
        max-width 600px
        position relative    // Add this
        top -10vh           // Use viewport height instead of percentage
        // or try margin-top: -10vh

    &-title
        font-size 4rem
        margin-bottom 20px
        background linear-gradient(45deg, $text, $accent)
        -webkit-background-clip text
        -webkit-text-fill-color transparent

    &-subtitle
        font-size 1.2rem
        color rgba($text, 0.8)
        margin-bottom 40px

// Add this to handle the fade
.hero.fade-out
    opacity 0
    pointer-events none

// Buttons
.cta-button
    background linear-gradient(45deg, darken($accent, 20%), $accent)
    border none
    padding 15px 30px
    border-radius 30px
    color $primary
    font-size 1.1rem
    font-weight 600
    cursor pointer
    transition transform 0.3s ease
    
    &:hover
        transform translateY(-2px)
        glow($accent)

// Project Wizard
.project-wizard
    position fixed
    top 50%
    left 50%
    transform translate(-50%, -50%) scale(0.9)
    background $secondary
    width 90%
    max-width 800px
    border-radius 20px
    padding 30px
    opacity 0
    visibility hidden
    transition all 0.3s ease
    z-index 2
    
    &.active
        transform translate(-50%, -50%) scale(1)
        opacity 1
        visibility visible

.wizard-header
    margin-bottom 40px

.wizard-steps
    display flex
    justify-content space-between
    
    .step
        position relative
        padding 10px
        color rgba($text, 0.6)
        flex 1
        text-align center
        
        &.active
            color $accent
            
            &:before
                background $accent

        &:before
            content ''
            position absolute
            bottom -5px
            left 0
            width 100%
            height 2px
            background rgba($text, 0.2)

.wizard-content
    min-height 300px
    margin-bottom 60px
    position relative

.wizard-step
    display none
    
    &.active
        display block

.input-group
    margin-bottom 20px
    
    label
        display block
        margin-bottom 8px
        color rgba($text, 0.8)
    
    input, textarea
        width 100%
        padding 12px
        background rgba($text, 0.1)
        border 1px solid rgba($text, 0.2)
        border-radius 8px
        color $text
        font-family $font-primary
        
        &:focus
            outline none
            border-color $accent
    
    textarea
        resize vertical
        min-height 100px

.project-info
    margin-bottom 20px
    padding 15px
    background rgba($text, 0.1)
    border-radius 8px
    
    p
        color rgba($text, 0.8)
        
        span
            color $accent
            font-weight 600

.review-content
    .review-item
        margin-bottom 30px
        
        h3
            color rgba($text, 0.8)
            margin-bottom 10px
            font-size 1rem
        
        p
            color $text
            font-size 1.1rem
            padding 15px
            background rgba($text, 0.1)
            border-radius 8px

// Wizard Navigation
.wizard-navigation
    position absolute
    bottom 30px
    right 30px

.nav-button
    padding 12px 24px
    border-radius 20px
    font-weight 600
    cursor pointer
    transition all 0.3s ease
    border none
    
    &.next-button
        background darken($accent, 20%)
        color $text
        opacity 0.5
        pointer-events none
        
        &:enabled
            background $accent
            opacity 1
            pointer-events auto
            
            &:hover
                transform translateY(-2px)
                glow($accent)

// Loading indicator
.loading-indicator
    display flex
    flex-direction column
    align-items center
    gap 15px
    margin 20px 0
    
    &.hidden
        display none
    
    .loader
        width 40px
        height 40px
        border 4px solid rgba($accent, 0.1)
        border-radius 50%
        border-top-color $accent
        animation spin 1s linear infinite

@keyframes spin
    100%
        transform rotate(360deg)

// Generated content
.generated-content
    margin-top 20px
    padding 15px
    background rgba($text, 0.1)
    border-radius 8px
    min-height 100px